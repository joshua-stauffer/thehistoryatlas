{
  "id": null,
  "title": "PostgreSQL Database Metrics",
  "tags": ["postgresql", "database", "prometheus"],
  "timezone": "browser",
  "panels": [
    {
      "id": 1,
      "title": "Active Connections",
      "type": "graph",
      "targets": [
        {
          "expr": "pg_stat_activity_count",
          "legendFormat": "Active Connections",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "yaxes": [
        {
          "format": "short"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 2,
      "title": "Database Size",
      "type": "graph",
      "targets": [
        {
          "expr": "pg_database_size_bytes{datname=\"prod_replica\"}",
          "legendFormat": "{{datname}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "yaxes": [
        {
          "format": "bytes"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "Transaction Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(pg_stat_database_xact_commit{datname=\"prod_replica\"}[5m])",
          "legendFormat": "Commits",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_xact_rollback{datname=\"prod_replica\"}[5m])",
          "legendFormat": "Rollbacks",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "yaxes": [
        {
          "format": "ops"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 4,
      "title": "Rows Read/Written",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(pg_stat_database_tup_fetched{datname=\"prod_replica\"}[5m])",
          "legendFormat": "Rows Read",
          "refId": "A"
        },
        {
          "expr": "rate(pg_stat_database_tup_inserted{datname=\"prod_replica\"}[5m])",
          "legendFormat": "Rows Inserted",
          "refId": "B"
        },
        {
          "expr": "rate(pg_stat_database_tup_updated{datname=\"prod_replica\"}[5m])",
          "legendFormat": "Rows Updated",
          "refId": "C"
        },
        {
          "expr": "rate(pg_stat_database_tup_deleted{datname=\"prod_replica\"}[5m])",
          "legendFormat": "Rows Deleted",
          "refId": "D"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      },
      "yaxes": [
        {
          "format": "ops"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 5,
      "title": "Cache Hit Ratio",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(pg_stat_database_blks_hit{datname=\"prod_replica\"}[5m]) / (rate(pg_stat_database_blks_hit{datname=\"prod_replica\"}[5m]) + rate(pg_stat_database_blks_read{datname=\"prod_replica\"}[5m])) * 100",
          "legendFormat": "Cache Hit Ratio %",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      },
      "yaxes": [
        {
          "format": "percent",
          "max": 100,
          "min": 0
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 6,
      "title": "Deadlocks",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(pg_stat_database_deadlocks{datname=\"prod_replica\"}[5m])",
          "legendFormat": "Deadlocks/sec",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      },
      "yaxes": [
        {
          "format": "ops"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 7,
      "title": "Slow Queries (>5s)",
      "type": "stat",
      "targets": [
        {
          "expr": "pg_stat_activity_max_tx_duration{datname=\"prod_replica\"}",
          "legendFormat": "Max Query Duration",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 24
      }
    },
    {
      "id": 8,
      "title": "Total Tables",
      "type": "stat",
      "targets": [
        {
          "expr": "count(pg_stat_user_tables_n_tup_ins)",
          "legendFormat": "Tables",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 24
      }
    },
    {
      "id": 9,
      "title": "Connections by State",
      "type": "graph",
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=\"prod_replica\"}",
          "legendFormat": "{{state}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      },
      "yaxes": [
        {
          "format": "short"
        },
        {
          "format": "short"
        }
      ]
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "refresh": "10s",
  "schemaVersion": 16,
  "version": 0,
  "links": []
}
