# ===========================================
# The History Atlas - Environment Variables
# ===========================================

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# ===========================================
# PostgreSQL Exporter Configuration
# ===========================================
POSTGRES_EXPORTER_USER=postgres
POSTGRES_EXPORTER_HOST=host.docker.internal
POSTGRES_EXPORTER_PORT=5432
POSTGRES_EXPORTER_DB=postgres
POSTGRES_SSL_MODE=disable
POSTGRES_EXPORTER_PORT=9187

# ===========================================
# FastAPI Application Configuration
# ===========================================
THA_DB_URI=postgresql://postgres@localhost:5432/postgres
THA_TEST_PASSWORD=test_password

# ===========================================
# Monitoring Stack Configuration
# ===========================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=4000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_ALLOW_SIGNUP=false
